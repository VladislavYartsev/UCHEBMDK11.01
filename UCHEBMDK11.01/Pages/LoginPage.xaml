<Page x:Class="UCHEBMDK11._01.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UCHEBMDK11._01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Авторизация" HorizontalAlignment="Center" FontWeight ="Bold" FontSize="35"></Label>
        <StackPanel Margin="0, 0, 5, 30">
            <Label Content="Логин" HorizontalAlignment="Center"/>
            <TextBox x:Name="Log" Width="200" Height="40" Margin="0"></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="Password" Height="40" Width="200" Margin="0"></PasswordBox>
            <Button Content="Войти" Height="35" Width="200" Click="CheckLogin" Margin="5"></Button>
            <Button Content="Нет аккаунта" Height="35" Width="200" Click="SwitchPage" Margin="0"></Button>
        </StackPanel>
    </DockPanel>
</Page>
