<Page x:Class="UCHEBMDK11._01.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UCHEBMDK11._01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Показать активные документы" Click="ShowActiveDocuments_Click" Margin="5" Padding="10,5"/>
            <Button Content="Архивировать старые документы" Margin="5" Padding="10,5"/>
            <Button Content="Создать новый договор" Click="CreateNewContract_Click" Margin="5" Padding="10,5"/>
        </StackPanel>

        <DataGrid x:Name="SQL" Grid.Row="1" AutoGenerateColumns="True" 
               CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"/>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText">Готово</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
